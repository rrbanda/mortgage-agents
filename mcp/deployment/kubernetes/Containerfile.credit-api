# Containerfile for Mock Credit Bureau API
# Optimized for OpenShift deployment with ToolHive

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the mock credit API
COPY mock_credit_api.py .

# Create non-root user for OpenShift security
RUN groupadd -r creditapi && useradd -r -g creditapi creditapi
RUN chown -R creditapi:creditapi /app
USER creditapi

# Expose port 8080 (standard for ToolHive MCP servers)
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8080/health')" || exit 1

# Run the application
CMD ["python", "mock_credit_api.py"]
