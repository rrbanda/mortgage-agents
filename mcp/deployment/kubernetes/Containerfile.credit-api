# Containerfile for Credit Check MCP Server
# Simple HTTP MCP server for OpenShift deployment

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy all MCP server files
COPY mock_credit_api.py .
COPY mcp_server.py .
COPY start-mcp-server.sh .

# Make start script executable
RUN chmod +x start-mcp-server.sh

# Create non-root user for OpenShift security
RUN groupadd -r creditapi && useradd -r -g creditapi creditapi
RUN chown -R creditapi:creditapi /app
USER creditapi

# Expose port 8000 (MCP server HTTP transport)
# Flask API runs internally on 8081
EXPOSE 8000

# Health check (checks Flask API on 8081)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8081/health', timeout=5)" || exit 1

# Run the startup script (starts both Flask API and MCP server)
CMD ["./start-mcp-server.sh"]
